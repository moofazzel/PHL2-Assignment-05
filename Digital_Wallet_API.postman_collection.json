{
  "info": {
    "name": "Digital Wallet API",
    "description": "A complete digital wallet API with user, agent, and admin functionality",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000/api",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\",\n  \"phone\": \"01712345678\",\n  \"role\": \"user\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Register Agent",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Agent Smith\",\n  \"email\": \"agent@example.com\",\n  \"password\": \"password123\",\n  \"phone\": \"01787654321\",\n  \"role\": \"agent\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.environment.set('token', response.data.token);",
                  "}"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "User Wallet Operations",
      "item": [
        {
          "name": "Get My Wallet",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/wallets/me",
              "host": ["{{baseUrl}}"],
              "path": ["wallets", "me"]
            }
          }
        },
        {
          "name": "Add Money",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amount\": 1000\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/wallets/add-money",
              "host": ["{{baseUrl}}"],
              "path": ["wallets", "add-money"]
            }
          }
        },
        {
          "name": "Withdraw Money",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amount\": 500\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/wallets/withdraw",
              "host": ["{{baseUrl}}"],
              "path": ["wallets", "withdraw"]
            }
          }
        },
        {
          "name": "Send Money",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amount\": 200,\n  \"toUserId\": \"user_id_here\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/wallets/send-money",
              "host": ["{{baseUrl}}"],
              "path": ["wallets", "send-money"]
            }
          }
        }
      ]
    },
    {
      "name": "Agent Operations",
      "item": [
        {
          "name": "Cash In",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amount\": 1000,\n  \"userId\": \"user_id_here\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/wallets/cash-in",
              "host": ["{{baseUrl}}"],
              "path": ["wallets", "cash-in"]
            }
          }
        },
        {
          "name": "Cash Out",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amount\": 500,\n  \"userId\": \"user_id_here\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/wallets/cash-out",
              "host": ["{{baseUrl}}"],
              "path": ["wallets", "cash-out"]
            }
          }
        }
      ]
    },
    {
      "name": "Transactions",
      "item": [
        {
          "name": "Get My Transactions",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/transactions/my?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["transactions", "my"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Get Agent Commissions",
          "request": {
            "method": "GET",
